# =============================================================================
# Comboni School Management System - Environment Variables
# =============================================================================
# Copy this file to .env and update the values for your environment
# DO NOT commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Django Core Settings
# -----------------------------------------------------------------------------

# SECURITY WARNING: Keep this secret key secret! Generate a new one for production.
# You can generate a secure key with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-change-this-in-production

# Debug mode: Set to False for production
# WARNING: Never set DEBUG=True in production!
DEBUG=True

# Allowed hosts: Comma-separated list of host/domain names this site can serve
# For production, add your domain(s): yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------

# For Development (SQLite - Default):
# Leave DATABASE_URL empty or use: sqlite:///db.sqlite3

# For Production (PostgreSQL):
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name
# Example: DATABASE_URL=postgresql://comboni_user:secure_password@localhost:5432/comboni_school_db

# For Production (MySQL):
# DATABASE_URL=mysql://username:password@localhost:3306/database_name

# Default (SQLite for development - leave empty):
DATABASE_URL=

# -----------------------------------------------------------------------------
# Email Configuration
# -----------------------------------------------------------------------------

# SMTP Server Configuration
# For Gmail: smtp.gmail.com
# For Outlook: smtp-mail.outlook.com
# For SendGrid: smtp.sendgrid.net
# For AWS SES: email-smtp.us-east-1.amazonaws.com
EMAIL_HOST=smtp.gmail.com

# SMTP Port (587 for TLS, 465 for SSL, 25 for unencrypted)
EMAIL_PORT=587

# Use TLS encryption (True/False)
EMAIL_USE_TLS=True

# Email address used for sending emails
# For Gmail, you need to use an "App Password" - not your regular password
# See: https://support.google.com/accounts/answer/185833
EMAIL_HOST_USER=your-email@gmail.com

# Email password or app password
# For Gmail: Generate an App Password from your Google Account settings
# NEVER commit your real password to version control!
EMAIL_HOST_PASSWORD=your-app-password-here

# Email timeout in seconds
EMAIL_TIMEOUT=60

# -----------------------------------------------------------------------------
# Redis Configuration (for WebSocket/Channel Layers)
# -----------------------------------------------------------------------------

# For Development: Leave empty to use InMemoryChannelLayer (no Redis needed)
# REDIS_URL=

# For Production: Use Redis for WebSocket support
# Format: redis://host:port/db or redis://password@host:port/db
# Local Redis: redis://localhost:6379/0
# Redis with password: redis://:password@localhost:6379/0
# Remote Redis: redis://username:password@remote_host:6379/0

# Default (Development - no Redis, leave empty):
REDIS_URL=

# -----------------------------------------------------------------------------
# Static & Media Files Configuration
# -----------------------------------------------------------------------------

# Static files root directory (absolute path)
# Default: staticfiles (relative to project root)
# For production, you might want: /var/www/comboni_school/staticfiles
# Leave empty for default
STATIC_ROOT=

# Media files root directory (absolute path)
# Default: media (relative to project root)
# For production, you might want: /var/www/comboni_school/media
# Leave empty for default
MEDIA_ROOT=

# -----------------------------------------------------------------------------
# Security Settings (Production)
# -----------------------------------------------------------------------------

# Redirect all HTTP traffic to HTTPS (True/False)
# Only set to True if you have SSL/HTTPS configured
# WARNING: Setting this to True without HTTPS will cause redirect loops!
SECURE_SSL_REDIRECT=False

# Use secure cookies (True/False)
# Set to True for production with HTTPS
SESSION_COOKIE_SECURE=False

# CSRF cookie secure (True/False)
# Set to True for production with HTTPS
CSRF_COOKIE_SECURE=False

# Browser XSS Filter (True/False)
# Enabled by default, set to False to disable
SECURE_BROWSER_XSS_FILTER=True

# Content type nosniff (True/False)
# Enabled by default, set to False to disable
SECURE_CONTENT_TYPE_NOSNIFF=True

# =============================================================================
# Notes
# =============================================================================
# 
# 1. Never commit the actual .env file to version control
# 2. Generate a new SECRET_KEY for production using Django's management command
# 3. Use strong passwords for database and email accounts
# 4. For production, always set DEBUG=False
# 5. Configure ALLOWED_HOSTS with your actual domain(s)
# 6. Use PostgreSQL for production (not SQLite)
# 7. Set up SSL/HTTPS before enabling security settings
# 8. Use App Passwords for Gmail instead of regular passwords
# 9. Consider using environment-specific .env files (.env.development, .env.production)
# 10. Regularly rotate secrets and passwords
#
# =============================================================================
